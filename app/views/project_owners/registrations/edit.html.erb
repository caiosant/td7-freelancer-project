<div class="container shadow p-3 mt-5 bg-body rounded col-3">
  <h2 class="text-center">Editar Conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "project_owners/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class:"form-label mt-2" %> <i>(deixe em branco se não quiser alterar)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> caracteres no mínimo</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"form-label mt-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
    </div>

    <div class="field">
      <%= f.label :current_password, class:"form-label mt-2" %> <i>(necessária para salvar as alterações)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control"  %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "Update", class:"btn btn-primary form-control" %>
    </div>
  <% end %>

  <hr>

  <h3 class="text-center">Cancelar minha conta</h3>

  <p>Não está feliz? <%= button_to "Cancele Minha Conta", registration_path(resource_name), 
                         data: { confirm: "Tem certeza?" }, method: :delete, class:'btn btn-danger form-control' %></p>

  <hr>

  <%= link_to "Back", :back, class:"btn btn-primary form-control" %>
</div>
