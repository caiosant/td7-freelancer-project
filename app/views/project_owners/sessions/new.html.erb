<div class="container shadow p-3 mt-5 bg-body rounded col-3">
  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"form-label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label"  %><br />
      <%= f.password_field :password, autocomplete: "current-password",  class:"form-control"  %>
      <div class="text-center">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me, class: "form-check-input " %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class: "btn btn-primary form-control " %>
    </div>
  <% end %>

