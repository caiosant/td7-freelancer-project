<hr>
    <%= form_with model: @proposal, url: project_proposals_path(@project) do |f|%>
        <div>
        <%= f.label :application_reason, class:"form-label" %>
        <%= f.text_field :application_reason, class:"form-control" %>
        </div>
        <div>
        <%= f.label :hours_value, class:"form-label" %>
        <%= f.number_field :hours_value, class:"form-control" %>
        </div>
        <div>
        <%= f.label :hours, class:"form-label" %>
        <%= f.number_field :hours, class:"form-control" %>
        </div>
        <div>
        <%= f.label :deadline_proposal, class:"form-label" %>
        <%= f.date_field :deadline_proposal, class:"form-control" %>
        </div>
        <%= f.submit 'Enviar Proposta', class:'btn btn-primary mt-3' %>
<% end %>