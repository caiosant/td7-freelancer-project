<h1>Minhas Propostas</h1>

<% if @proposals.empty?%>
    <div>
        Você ainda não realizou propostas
    </div>
<% end %>

<% @proposals.each do |proposal| %>
    <h3><%= link_to proposal.project.title, proposal.project %></h3>
    <p>Habilidade(s): 
        <% proposal.project.abilities.each do |ability| %>
            <%= ability.name %>
        <% end %>
    </p>
    <p>Status: <%= I18n.t(proposal.status) %>
<% end %>