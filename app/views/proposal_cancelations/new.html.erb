<% if @proposal.status == 'accepted'%>
    <div>
        <h1>Cancelar Proposta</h1>
    </div>
    <div>
        <h3>Propostas aceitas necessitam de uma justificativa para o cancelamento.</h3>
    </div>
    <div>
        <%= form_with(model: @proposal_cancelation, url: project_proposal_proposal_cancelations_path(@project, @proposal, @proposal_cancelation)) do |f| %>
            <div>
                <%= f.label :reason %>
                <% @proposal_cancelation.errors.full_messages_for(:reason).each do |message| %>
                    <div><%= message %></div>
                <% end %>
                <%= f.text_field :reason %>
            </div>
            <%= f.submit 'Enviar Cancelamento de Proposta' %>
        <% end %>
    </div>
<% end %>
