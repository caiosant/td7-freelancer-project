<h1>Meu Perfil - Editar</h1>

<%= form_with(model: @profile) do |f| %>
  <div>
    <%= f.label :full_name %>
    <% @profile.errors.full_messages_for(:full_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= f.text_field :full_name %>
  </div>
    <div>
    <%= f.label :social_name %>
    <% @profile.errors.full_messages_for(:social_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= f.text_field :social_name %>
  </div>
  <div>
    <%= f.label :description %>
    <% @profile.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :birth_date %>
    <% @profile.errors.full_messages_for(:birth_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= f.date_field :birth_date %>
  </div>
  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <% @profile.errors.full_messages_for(:avatar).each do |message| %>
          <div><%= message %></div>
    <% end %>
  </div>
  <%= f.submit 'Atualizar Perfil' %>
<% end %>
