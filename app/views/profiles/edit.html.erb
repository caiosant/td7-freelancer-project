<div class="container shadow p-3 mt-5 bg-body rounded col-4">
  <h1 class="text-center">Meu Perfil</h1>

  <%= form_with(model: @profile) do |f| %>
    <div>
      <%= f.label :full_name, class:"form-label" %>
      <% @profile.errors.full_messages_for(:full_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= f.text_field :full_name, class:"form-control" %>
    </div>
      <div>
      <%= f.label :social_name %>
      <% @profile.errors.full_messages_for(:social_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= f.text_field :social_name, class:"form-control"  %>
    </div>
    <div>
      <%= f.label :description %>
      <% @profile.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= f.text_area :description, class:"form-control", rows: 5 %>
    </div>
    <div>
      <%= f.label :birth_date %>
      <% @profile.errors.full_messages_for(:birth_date).each do |message| %>
        <div><%= message %></div>
      <% end %>
      <%= f.date_field :birth_date, class:"form-control" %>
    </div>
    <div>
      <%= f.label :occupation_area_id, 'Área de Atuação' %>
      <% @profile.errors.full_messages_for(:occupation_area).each do |message| %>
        <div><%= message %></div>
      <% end %>
          <%= f.collection_select :occupation_area_id, @occupation_area, :id, :name, {:prompt => 'Selecione uma área de atuação'}, class:"form-select" %>
    </div>
    <div>
      <%= f.label :avatar, class:"form-label" %>
      <%= f.file_field :avatar, class:"form-control" %>
      <% @profile.errors.full_messages_for(:avatar).each do |message| %>
            <div><%= message %></div>
      <% end %>
    </div>
    <%= f.submit 'Salvar Perfil', class:"btn btn-primary mt-3 form-control" %>
  <% end %>
</div>